[package]
name = "{{ crate_name }}"
version = "0.0.0"
edition = "2024"
publish = false

[workspace]

# Ultra-fast compile profile - prioritize compile speed over runtime
# Since we only collect inventory items, runtime perf is irrelevant
[profile.dev]
opt-level = 0
debug = false
debug-assertions = false
overflow-checks = false
lto = false
codegen-units = 256
incremental = true

[dependencies]
{% if has_fluent_features %}
{{ parent_crate_name }} = { path = "..", features = [{% for feature in fluent_features %}"{{ feature }}"{% if !loop.last %}, {% endif %}{% endfor %}] }
{% else %}
{{ parent_crate_name }} = { path = ".." }
{% endif %}
{{ es_fluent_dep }}
{{ es_fluent_cli_helpers_dep }}

[[bin]]
name = "generate"
path = "src/generate.rs"

[[bin]]
name = "check"
path = "src/check.rs"
