{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "//#build:wasm"],
      "outputs": ["dist/**", ".astro/**"]
    },
    "//#build:wasm": {
      "cache": true,
      "inputs": [
        "Cargo.toml",
        "Cargo.lock",
        "crates/**",
        "examples/bevy-example/**",
        "examples/assets/**"
      ],
      "outputs": ["web/public/bevy-example/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    }
  }
}
